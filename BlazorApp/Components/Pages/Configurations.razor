@page "/configuracoes"
@layout Layout.MainLayout

<style type="text/css">
    .input-form {
        width: 100%;
    }
    
    .titulo-tab {
        color: #00a82d !important;
        font-weight: bold;
    }
    
    .mud-tab-slider {
        background: #00a82d !important;
    }
</style>

<PageTitle>Configurações</PageTitle>

<MudTabs Class="mt-5" Elevation="2" Rounded="true" ApplyEffectsToContainer="true" PanelClass="pa-6">
    <MudTabPanel Text="Usuário" Class="titulo-tab">
        <MudContainer Class="w-100 d-flex flex-row ms-0">
            <MudPaper Elevation="0" Class="mt-2 d-flex flex-column align-items-start" Style="width: 25%">
                <MudAvatar Style="width: 140px; height: 150px;">
                    <MudImage Src="https://i.pinimg.com/564x/81/31/ab/8131ab3881a62145cc687a2834566d56.jpg"></MudImage>
                </MudAvatar>
                <MudFileUpload Class="mt-3 input-form" T="IBrowserFile" Accept=".png, .jpg">
                    <ActivatorContent>
                        <MudContainer Class="d-flex flex-row p-0">
                            <MudButton Variant="Variant.Filled"
                                       Color="Color.Success"
                                       StartIcon="@Icons.Material.Filled.CloudUpload">
                                Selecionar
                            </MudButton>
                        </MudContainer>
                    </ActivatorContent>
                </MudFileUpload>
            </MudPaper>

            <MudPaper Elevation="0" Style="width: 45%;">
                <MudTextField @bind-Value="a"
                              FullWidth="true"
                              Variant="Variant.Outlined"
                              Label="Nome"
                              Class="input-form">
                </MudTextField>
                <MudTextField @bind-Value="a"
                              FullWidth="true"
                              Variant="Variant.Outlined"
                              Label="Email"
                              Class="input-form mt-5">
                </MudTextField>
            </MudPaper>
            <MudPaper Elevation="0" Class="ms-10" Style="width: 40%">
                <MudTextField @bind-Value="a"
                              FullWidth="true"
                              Variant="Variant.Outlined"
                              Label="N° apto"
                              Class="w-25">
                </MudTextField>
                <MudTextField @bind-Value="a"
                              FullWidth="true"
                              Variant="Variant.Outlined"
                              Label="Bloco"
                              Class="w-25 mt-5">
                </MudTextField>
            </MudPaper>
        </MudContainer>
    </MudTabPanel>
    <MudTabPanel Text="Notificações" Class="titulo-tab">
        <MudText>Content Two</MudText>
    </MudTabPanel>
</MudTabs>

