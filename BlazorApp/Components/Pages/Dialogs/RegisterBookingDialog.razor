@page "/RegisterBookingDialog"
<style>
    .dialog {
        width: 50%;
    }

    .dialog-content {
        width: 100%;
        display: flex;
        flex-direction: row;
        justify-content: space-around;
    }
    
    .dates-content {
        padding-left: 0;
        display: flex;
        flex-direction: column;
        align-items: start;
        justify-content: center;
        width: 50%;
    }
    
    .text-field {
        width: 50%;
    }
    
    @@media (max-width: 760px) {
        .dialog {
            width: 85%;
        }
    }
    
    @@media (max-width: 1170px) {
        .dialog-content {
            width: 100%;
            display: flex;
            flex-direction: column;
            justify-content: start;
        }
        
        .dates-content {
            padding: 0;
            display: flex;
            flex-direction: column;
            align-items: start;
            justify-content: center;
            width: 100%;
        }
        
        .text-field {
            margin-top: 1rem;
            width: 100%;
        }
        
        .mud-select {
            width: 100%;
        }
    }
</style>

<MudDialog Class="dialog">
    <DialogContent>
        <MudContainer Class="dialog-content mb-4">
            <MudContainer Class="dates-content">
                <MudDatePicker Label="Dia da reserva" @bind-Date="_date" ShowToolbar="false" Class="w-100"/>
                <MudSelect T="string" Variant="Variant.Outlined" Label="Horário de início">
                    @* <MudSelectItem Value="">09</MudSelectItem> *@
                </MudSelect>
                <MudSelect T="string" Variant="Variant.Outlined" Label="Horário de término">
                    @* <MudSelectItem Value="09">09</MudSelectItem> *@
                </MudSelect>
            </MudContainer>
            <MudTextField Placeholder="Observação" Variant="Variant.Outlined" Class="text-field" Lines="8" T="string"></MudTextField>
        </MudContainer>
        <MudButton Class="w-100" Variant="Variant.Filled" Size="Size.Small" Style="background-color: #146c43; color: white">Reservar</MudButton>
    </DialogContent>
</MudDialog>

@code {
    [Parameter] public int SpaceId { get; set; }
    Booking _booking = new();
    private DateTime? _date = DateTime.Today;
}